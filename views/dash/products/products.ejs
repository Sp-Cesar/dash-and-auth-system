<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Login | Rocket</title>
  </head>
  <body>
    <%- include("../../partials/header") %>

    <div class="container">
      <br>
      <h1>Productos</h1>
      <br>
      <div class="container my-4">
        <div class="row row-cols-1 row-cols-md-4 g-4">
          <% resultado.forEach((productos) => { %>
          <!-- Producto 1 -->
          <div class="col">
            <div class="card">
            <div class="card-body">
                <h5 class="card-title"> <%= productos.titulo %> </h5>
                <p class="card-text"> <%= productos.autor %> </p>
            </div>
            <a href="/detalle/<%= productos.id %>" class="btn btn-primary" type="button">VER DETALLE</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>

    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>