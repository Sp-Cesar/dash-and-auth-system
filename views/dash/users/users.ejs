<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Login | Rocket</title>
  </head>
  <body>
    <%- include("../../partials/header") %>

    <div class="container">
      <br>
      <h1>Usuarios</h1>
      <br>
      <div class="container">
        <a href="/create" type="button" class="btn btn-outline-primary">
            Nuevo
            <i class='bx bxs-plus-circle ' ></i>
        </a>
        <table class="table table-striped text-cente mt-4">
            <thead>
                <tr>
                <th scope="col">ID</th>
                <th scope="col">NOMBRE</th>
                <th scope="col">USER</th>
                <th scope="col">ROL</th>
                <th scope="col">ACTION</th>
                </tr>
            </thead>
            <tbody>
                <% resultado.forEach((user)=>{ %> 
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.nombre %></td>
                    <td><%= user.user %></td>
                    <td><%= user.rol %></td>
                    <td>
                        <a href="/update/<%= user.id %>" type="button" class="btn btn-outline-success">Edit</a> 
                    </td>
                    <td>
                        <a href="/delete/<%= user.id %>" onclick="return confirm('Estas seguro que desea Eliminar?')" type="button" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>